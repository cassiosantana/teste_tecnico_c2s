<p style="color: green"><%= notice %></p>

<%= render @ebook %>

<div class="flex items-center space-x-2">
  <%= link_to "Edit this ebook", edit_ebook_path(@ebook), class: "btn-primary" %>
  <%= link_to "Back to ebooks", ebooks_path, class: "btn-secondary" %>

  <div class="inline-block">
    <%= button_to "Destroy this ebook", @ebook, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn-danger" %>
  </div>
</div>
